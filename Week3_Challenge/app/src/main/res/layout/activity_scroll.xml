<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/coloredSqares"
            android:layout_marginTop="16dp"
            android:text="@string/scroll_view_info">

        </TextView>

        <RelativeLayout
            android:id="@+id/coloredSqares"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/yellowBtn"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="#fbc962" />

            <Button
                android:id="@+id/lightGreenBtn"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerInParent="true"
                android:background="#cdedd7" />

            <Button
                android:id="@+id/greenBtn"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_toEndOf="@id/lightGreenBtn"
                android:background="#7ccbc5" />

            <Button
                android:id="@+id/pinkBtn"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="#fb987e"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
    </RelativeLayout>


</ScrollView>