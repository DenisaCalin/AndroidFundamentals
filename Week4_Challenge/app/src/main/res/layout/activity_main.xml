<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:background="@color/colorPrimaryDark"
        android:padding="16dp"
        android:text="Challenge 1"
        android:textColor="#fff"
        android:onClick="frameLayoutActivityOnClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:background="@color/colorPrimary"
        android:padding="16dp"
        android:text="Challenge 2"
        android:textColor="#fff"
        android:onClick="recyclerViewActivityOnClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:background="@color/colorAccent"
        android:padding="16dp"
        android:text="Challenge 3"
        android:onClick="constraintLayoutActivityOnClick"/>

</LinearLayout>